{% extends 'base.html.twig' %}

{% block body %}
    <h1>Presentation</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ presentation.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ presentation.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ presentation.description }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{% if presentation.statut %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ presentation.slug }}</td>
            </tr>
            <tr>
                <th>Publiepar</th>
                <td>{{ presentation.publiePar }}</td>
            </tr>
            <tr>
                <th>Modifiepar</th>
                <td>{{ presentation.modifiePar }}</td>
            </tr>
            <tr>
                <th>Publiele</th>
                <td>{{ presentation.publieLe }}</td>
            </tr>
            <tr>
                <th>Modifiele</th>
                <td>{{ presentation.modifieLe }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('backend_presentation_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('backend_presentation_edit', { 'id': presentation.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
