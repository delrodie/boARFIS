{% extends 'backoffice.html.twig' %}

{% block title %}{{ parent () }} {{ produit.titre }}{% endblock %}

{% block body %}
    <section class="content-header">
        <h1>{{ produit.titre }}</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ absolute_url(path('backend'))}}"><i class="fa fa-home"></i> Accueil</a></li>
            <li class="breadcrumb-item"><a href="{{ absolute_url(path('backend_produit_index'))}}">produits</a></li>
            <li class="breadcrumb-item active">{{ produit.titre }}</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">

        <div class="box box-warning">
            <div class="box-header text-right">
                <div class="btn-group" role="group" aria-label="Basic example">
                    <a href="{{ absolute_url(path('backend_produit_edit', {'slug': produit.slug})) }}" >
                        <button type="button" class="btn btn-primary"><i class="fa fa-edit"></i> Modifier</button>
                    </a>
                    <a href="{{ absolute_url(path('backend_produit_index')) }}" >
                        <button type="button" class="btn btn-default"><i class="fa fa-list"></i> Liste des articles de produit</button>
                    </a>

                    {{ form_start(delete_form, {'attr': {'onsubmit': 'return confirm("Êtes-vous sur de vouloir supprimer cette produit ?");'}}) }}
                    <button type="submit" value="Supprimer" class="btn btn-danger">
                        <i class="fa fa-trash"></i> Supprimer
                    </button>
                    {{ form_end(delete_form) }}
                </div>
            </div>

            <div class="row">
                <div class="col-md-12 col-lg-12">
                    <div class="box box-default">
                        <div class="box-body">
                            <h4 class="card-title">
                                {% if produit.statut %}
                                    <span class="badge badge-success">Actif</span>
                                {% else %}
                                    <span class="badge badge-danger">Désactivé</span>
                                {% endif %}
                                {{ produit.titre }}
                            </h4>
                            <p class="card-text">{{ produit.description|raw }}</p>
                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                </div>

            </div>

    </section>
{% endblock %}
